{
  "name": "@webpress/global",
  "private": true,
  "license": "GPLv2",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@webpress/core": [
        "src/packages/core/src"
      ],
      "@webpress/theme": [
        "src/packages/theme/src"
      ],
      "@webpress/router": [
        "src/packages/router/src"
      ]
    }
  },
  "devDependencies": {
    "@stencil/core": "^2.4.0",
    "@stencil/sass": "^1.4.1",
